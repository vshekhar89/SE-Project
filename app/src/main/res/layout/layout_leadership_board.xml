<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="25dp"
    android:weightSum="1"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/user_data"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/leader_name_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Your Username:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_nam_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/leader_name_text"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_users_data"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/leader_points_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Your Coins:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leader_points_user"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/leader_points_text"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_data2"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/leader_won_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Games Won:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leader_won_user"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/leader_won_text"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:alpha="0.9">

        <TableLayout
            android:id="@+id/leader_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>